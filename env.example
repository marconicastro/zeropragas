# ============================================
# META PIXEL CONFIGURATION
# ============================================

# Meta Pixel ID (obrigatório)
NEXT_PUBLIC_META_PIXEL_ID=642933108377475

# CAPI Gateway URL (obrigatório)
NEXT_PUBLIC_CAPI_GATEWAY_URL=https://capig.maracujazeropragas.com/

# Habilitar pixel no browser (true = HÍBRIDO, false = CAPI-ONLY)
# Recomendado: false (apenas CAPI Gateway para melhor privacidade)
NEXT_PUBLIC_BROWSER_PIXEL=false

# ============================================
# TRACKING CONFIGURATION
# ============================================

# Modo de tracking (development, staging, production)
NEXT_PUBLIC_TRACKING_MODE=production

# Habilitar debug de tracking no console
NEXT_PUBLIC_DEBUG_TRACKING=false

# Habilitar sistema de monitoramento
NEXT_PUBLIC_ENABLE_MONITORING=true

# ============================================
# UTM CONFIGURATION
# ============================================

# Dias para manter UTMs no cookie/localStorage
NEXT_PUBLIC_UTM_COOKIE_DAYS=30

# Prevenir captura de SubIDs (true = mais seguro)
NEXT_PUBLIC_UTM_PREVENT_SUBIDS=true

# Prevenir captura de xcod/sck (true = mais seguro)
NEXT_PUBLIC_UTM_PREVENT_XCOD_SCK=true

# ============================================
# GEOLOCATION CONFIGURATION
# ============================================

# Habilitar cache de geolocalização
NEXT_PUBLIC_ENABLE_GEO_CACHE=true

# Tempo de cache de geolocalização (em minutos)
NEXT_PUBLIC_GEO_CACHE_TTL=60

# ============================================
# DATA PERSISTENCE
# ============================================

# Dias para expirar dados do usuário
NEXT_PUBLIC_USER_DATA_EXPIRY_DAYS=30

# Prefixo para chaves de localStorage
NEXT_PUBLIC_STORAGE_PREFIX=zc_

# ============================================
# WEBHOOK CONFIGURATION (Opcional)
# ============================================

# URL do webhook Cakto (se usar)
WEBHOOK_CAKTO_URL=

# Token de autenticação do webhook
WEBHOOK_AUTH_TOKEN=

# ============================================
# LGPD / PRIVACY
# ============================================

# Mostrar banner de consentimento
NEXT_PUBLIC_SHOW_CONSENT_BANNER=true

# Modo estrito de privacidade (não rastreia sem consentimento explícito)
NEXT_PUBLIC_STRICT_PRIVACY_MODE=false

# ============================================
# PERFORMANCE
# ============================================

# Timeout para APIs externas (em ms)
NEXT_PUBLIC_API_TIMEOUT=5000

# Habilitar retry automático em falhas
NEXT_PUBLIC_ENABLE_RETRY=true

# Número máximo de tentativas
NEXT_PUBLIC_MAX_RETRIES=3

# ============================================
# DEVELOPMENT / DEBUG
# ============================================

# Mostrar logs detalhados no console
NEXT_PUBLIC_VERBOSE_LOGS=false

# Simular eventos sem enviar (dry-run)
NEXT_PUBLIC_DRY_RUN=false

# Habilitar dashboard de métricas
NEXT_PUBLIC_SHOW_METRICS_DASHBOARD=false
